<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvLaundryCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imgLaundry" />

    <ImageView
        android:id="@+id/imgLaundry"
        android:layout_width="123dp"
        android:layout_height="123dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tvLaundryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/textview1"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imgLaundry"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLaundryAddress"
        android:layout_width="239dp"
        android:layout_height="21dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/textview2"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toEndOf="@+id/imgLaundry"
        app:layout_constraintTop_toBottomOf="@+id/tvLaundryName" />

    <TextView
        android:id="@+id/tvLaundryPrice"
        android:layout_width="239dp"
        android:layout_height="21dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="@string/textview3"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toEndOf="@+id/imgLaundry"
        app:layout_constraintTop_toBottomOf="@+id/tvLaundryAddress" />

    <Button
        android:id="@+id/btViewLaundry"
        android:layout_width="97dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/ver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLaundryPrice" />

</androidx.constraintlayout.widget.ConstraintLayout>